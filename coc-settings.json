{
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte",
    "python",
    "json"
  ],
  "tsserver.formatOnType": false,
  "coc.preferences.formatOnType": false,
  "snippets.ultisnips.directories": ["$HOME/.config/nvim/vim-plug"],
  "snippets.extends": {
    "typescriptreact": ["javascript"]
  },
  "tailwindCSS.htmlLanguages": [
    "blade",
    "edge",
    "eelixir",
    "ejs",
    "elixir",
    "elm",
    "erb",
    "eruby",
    "haml",
    "handlebars",
    "html",
    "HTML (EEx)",
    "HTML (Eex)",
    "html.twig",
    "jade",
    "leaf",
    "markdown",
    "njk",
    "nunjucks",
    "php",
    "razor",
    "slim",
    "svelte",
    "twig",
    "vue"
  ],
  "python.pythonPath": "python3",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--count",
    "--ignore=W391,W503",
    "--max-complexity=10",
    "--max-line-length=127",
    "--statistics"
  ],
  "python.formatting.provider": "black"
}
