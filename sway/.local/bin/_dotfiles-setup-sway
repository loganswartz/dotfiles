#!/bin/bash

# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -uo pipefail

function have() {
  command -v "$1" &> /dev/null
}

function install-dnf() {
  sudo dnf copr enable swayfx/swayfx
  sudo dnf copr enable mochaa/gtk-session-lock

  sudo dnf install swayfx waybar wob brightnessctl gtklock rofi blueman network-manager-applet wdisplays kanshi mako
}

function install-apt() {
  echo "SwayFX is not available on Ubuntu, installing vanilla sway instead." 1>&2

  sudo apt install sway waybar wob brightnessctl gtklock rofi blueman network-manager-gnome wdisplays kanshi mako
}

if have dnf; then
  install-dnf
elif have apt; then
  install-apt
fi
